<process initial-instances="script" shutdown-class="com.gigaspaces.grid.gsa.GigaSpacesShutdownProcessHandler">
    <script enable="true" work-dir="${com.gs.home}/bin"
            windows="${com.gs.home}/bin/gsm.bat" unix="${com.gs.home}/bin/gsm.sh">
        <argument></argument>
    </script>
    <vm enable="true" work-dir="${com.gs.home}/bin" main-class="com.gigaspaces.start.SystemBoot">
        <input-argument></input-argument>
        <argument>com.gigaspaces.start.services="LH,GSM"</argument>
    </vm>
    <restart-regex>.*OutOfMemoryError.*</restart-regex>
</process>
